@{


        var games = GameModel.getGame();
        <table>

            <div class="container">
                <div class="row">
                    @foreach (var item in games)
                    {

                        <tr>

                            @if (@item.Active)
                            {
                                <td width="60"><button class="btn btn-info my-2" onclick="ActiveGame()">@item.DrawText</button></td>

                            }

                        </tr>
                    }
                </div>
            </div>
        </table>
    
}
